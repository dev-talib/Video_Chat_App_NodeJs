<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enter Secret Code</title>
    <link rel="stylesheet" href="security.css">
</head>
<body>
    <div class="container">
        <h2>Enter Secret Code to Join Video Call</h2>

        <!-- Display error message if passed -->
        <% if (typeof message !== 'undefined') { %>
            <p class="error"><%= message %></p>
        <% } %>

        <form action="/enter-room" method="POST">
            <input type="text" name="secretCode" placeholder="Enter secret code" required />
            <br />
            <button type="submit">Enter</button>
        </form>
    </div>
</body>
</html>
